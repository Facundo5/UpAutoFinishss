<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="2dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/auto_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="16dp"
            android:background="@color/placeholder_bg"/>

        <View
            android:id="@+id/auto_title"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:text="tittle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/placeholder_bg"/>

        <View
            android:id="@+id/auto_price"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/auto_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:background="@color/placeholder_bg"
            android:text="@string/Pricecar" />


        <View
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_below="@id/auto_title"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_price"
            android:text="$"
            android:background="@color/placeholder_bg"/>

        <View
            android:id="@+id/auto_Descripcion"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/auto_price"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:text="texto"
            android:background="@color/placeholder_bg"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>