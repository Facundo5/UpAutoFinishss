<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#CCCCCC"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="2dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Colorprimariosuperior"
        android:clickable="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/auto_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/auto_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:text="tittle"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/auto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:text="@string/Pricecar"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_title"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_price"
            android:text="$"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/auto_Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_price"
            android:layout_toEndOf="@id/auto_foto"
            android:layout_toRightOf="@id/auto_foto"
            android:text="texto"
            android:textColor="@color/white" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>